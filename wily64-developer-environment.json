{
  "variables": {
    "iso_checksum": "86aa35a986eba6e5ad30e3d486d57efe6803ae7ea4859b0216953e9e62871131",
    "iso_checksum_type": "sha256",
    "iso_file": "http://releases.ubuntu.com/15.10/ubuntu-15.10-server-amd64.iso",
    "preseed_file": "base.seed",
    "vagrant_box_file": "build/{{isotime \"2006-01-02-15-10\"}}/{{env `ATLAS_NAME`}}.box",
    "vbox_version": "5.0.18",
    "vm_type": "Ubuntu_64",
    "vm_cpus": "2",
    "vm_ram_size": "1024",
    "vm_vram_size": "64",
    "vm_disk_size": "10240",
  },
  "provisioners": [
     {
      "type": "shell",
      "scripts": [
        "scripts/enable_passwordless_sudo.sh",
        "scripts/clean_ubuntu_cache.sh",
        "scripts/zero_image_drive.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}' '{{ user `vbox_version` }}' '{{ user `vm_type` }}' "
         }
       }
     }
  ],
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `preseed_file`}} ",
        "language=en ",
        "country=GB ",
        "locale=en_GB ",
        "noapic hostname={{env `ATLAS_NAME`}} ",
        "console-setup/layoutcode=gb ",
        "noprompt --<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `vm_disk_size`}}",
      "format": "ova",
      "guest_os_type": "{{user `vm_type`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": true,
      "http_directory": "http",
      "http_port_max": "{{user `http_port_max`}}",
      "http_port_min": "{{user `http_port_min`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_interface": "sata",
      "iso_url": "{{user `iso_file`}}",
      "output_directory": "output-{{env `ATLAS_NAME` }}-{{isotime \"2006-01-02\"}}",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--cpus", "{{user `vm_cpus`}}" ],
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `vm_ram_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--vram", "{{user `vm_vram_size`}}" ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "description": "A developer environment using the wily64 ubuntu OS",
  "post-processors": [
    [
      {
        "compression_level": 9,
        "keep_input_artifact": true,
        "only": [
          "vbox"
        ],
        "output": "{{user `vagrant_box_file`}}",
        "type": "vagrant",
        "vagrantfile_template": "Vagrantfile.template"
      },
      {
        "artifact": "{{env `ATLAS_USERNAME`}}/{{env `ATLAS_NAME`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "created_at": "{{timestamp}}",
          "provider": "virtualbox"
        },
        "only": [
          "vbox"
        ],
        "type": "atlas"
      }
    ]
  ],
  "push": {
    "name": "cooperc/wily64-developer-environment",
    "vcs": true
  }
}
